<!--learning.wxml-->
<view style="background-color:#22b14c;color:#fff;">
  <view style="text-align:center;padding:10px;">今天已学</view>
  <view style="text-align:center;padding:10px;"><text style="font-size:48px;">{{todaycompleted}}</text>个</view>
</view>
<view style="flex-direction:row;display:flex;justify-content:center;">
  <view style="text-align:center;flex:1;border-right:1px solid #e7e7e7;padding:10px;">已学{{completed}}个</view>
  <view style="text-align:center;flex:1;border-right:1px solid #e7e7e7;padding:10px;">剩余{{remains}}个</view>
  <view style="text-align:center;flex:1;padding:10px;">一共{{total}}个</view>
</view>
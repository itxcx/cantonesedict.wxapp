<block wx:if="{{!hasLearning}}">
  <view style="width:200px;height:100px;left:50%;top:50%;margin-left:-100px;margin-top:-50px;position:fixed;">
    <navigator url="/pages/choosecategory/choosecategory" style="text-align:center;padding:10px;border:1px solid #fff;border:1px solid #e7e7e7;border-radius:10px;">选择词库，开始学习</navigator>
  </view>
</block>
<block wx:else>
  <view>
    <navigator url="/pages/choosecategory/choosecategory" style="text-align:center;padding:10px;">{{learning.categoryname}} - 今天已学</navigator>
    <navigator url="/pages/choosevocabulary/choosevocabulary?categoryid={{learning.categoryid}}" style="text-align:center;padding:10px;">
      <text style="font-size:48px;">{{learning.todaycomplete}}</text>个</navigator>
  </view>
  <view style="flex-direction:row;display:flex;justify-content:center;">
    <view style="text-align:center;flex:1;border-right:1px solid #e7e7e7;padding:10px;">已学{{learning.complete}}个</view>
    <view style="text-align:center;flex:1;border-right:1px solid #e7e7e7;padding:10px;">剩余{{learning.remain}}个</view>
    <view style="text-align:center;flex:1;padding:10px;">一共{{learning.total}}个</view>
  </view>
  <view style="text-align:center;padding:10px;background-color:#e7e7e7;border-bottom:1px solid #e7e7e7;">今天学习</view>
  <view data-chntext="{{item.chntext}}" data-canvoice="{{item.canvoice}}" data-canpronounce="{{item.canpronounce}}" bindlongtap="show_actions" wx:key="chntext" wx:for="{{groups}}" style="margin-bottom:5px;padding:10px;border-bottom:1px solid #e7e7e7;background-color:#f8f8f8;">
    <view style="float:left;">{{item.chntext}} {{item.canpronounce}}</view>
    <view style="float:right;">
      <image data-canvoice="{{item.canvoice}}" data-canpronounce="{{item.canpronounce}}" bindtap="play_voice" style="height:20px;width:20px;" src="/images/voice.png"></image>
    </view>
    <view style="clear:both;"></view>
  </view>
</block>